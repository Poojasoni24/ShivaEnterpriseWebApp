@using Newtonsoft.Json
@using ShivaEnterpriseWebApp.Model
@model List<ShivaEnterpriseWebApp.Model.Issue>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div id="IssueDetailDiv">
            </div>
        </div>
    </div>

    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Issue Detail</h4>
                    <div class="compnay_btn">
                        <input class="btn btn-success" type="button" value="Add Issue" onclick="window.location.href='Issue/AddOrEditIssue'" />
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table id="order-listing" class="table">
                                    <thead>
                                        <tr>
                                            <th>Issue Code</th>
                                            <th>Issue Name</th>
                                            <th>Issue Description</th>
                                            <th>Issue Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            @foreach (var item in Model)
                                            {

                                                        <tr>
                                                            <td>@item.IssueCode</td>
                                                            <td>@item.IssueName</td>
                                                            <td>@item.IssueDescription </td>



                                                            <td>
                                                                <label class="badge badge-info">@(item.IsActive ? "Active" : "InActive")</label>
                                                            </td>

                                                            <td>
                                                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" onclick="loadIssuePartial(@(JsonConvert.SerializeObject(item.IssueId)))">
                                                                    view
                                                                </button>
                                                                <input class="btn btn-outline-danger" type="button" value="Delete" onclick="onDeleteIssue(@(JsonConvert.SerializeObject(item)))" />

                                                            </td>
                                                        </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>


</body>

</html>

<script src="~/js/Issue.js"></script>

