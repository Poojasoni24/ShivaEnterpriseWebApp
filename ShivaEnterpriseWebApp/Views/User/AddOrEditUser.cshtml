@model ShivaEnterpriseWebApp.Model.UserRegistration

@{
    ViewData["Title"] = "AddorEdit";
    SelectList yourDropdownList = ViewBag.SelectList;
}
<link href="~/css/company.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>@(Model != null && string.IsNullOrEmpty(Model.Id) ? "Edit User" : "User Registration")</h2>
    <div class="card-body company_from">
        <div class="form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="UserName" class="control-label"></label>
                <div class="col-md-9">
                    <input asp-for="UserName" class="form-control" autocomplete="off" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="First_Name" class="control-label"></label>
                <div class="col-md-9">
                    <input asp-for="First_Name" class="form-control" />
                </div>
                <span asp-validation-for="First_Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Middle_Name" class="control-label"></label>
                <div class="col-md-9">
                    <input asp-for="Middle_Name" class="form-control" />
                </div>
                <span asp-validation-for="Middle_Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Last_Name" class="control-label"></label>
                <div class="col-md-9">
                    <input asp-for="Last_Name" class="form-control" />
                </div>
                <span asp-validation-for="Last_Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="control-label"></label>
                <div class="col-md-9">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            @if (Model == null)
            {
                <div class="form-group row">
                    <label asp-for="Password" class="control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="Password" class="form-control" type="password" autocomplete="off" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <div class="col-md-9">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            }          
            <div class="form-group row">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <div class="col-md-9">
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="IsActive" class="control-label"></label>
                <div class="col-md-9">
                    @* @Html.CheckBoxFor(model => model.IsActive) *@
                    <input asp-for="IsActive" class="form-control" type="checkbox" value="IsActive" />
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <input asp-for="CreatedDateAndTime" class="form-control" type="hidden" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @* <input type="button" value="Back to List" class="btn btn-info" asp-action="Index" asp-controller="Company"> *@
                <button type="button" class="btn btn-info"> <a asp-action="Index">Back to List</a></button>
            </div>
        </div>
    </div>

}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

