@model ShivaEnterpriseWebApp.Model.Account
@{
    ViewData["Title"] = "Details";
}
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Account Detail</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.AccountCode)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.AccountCode)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.AccontName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.AccontName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.AccountDescription)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.AccountDescription)
                </dd>
                 <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.AccountGroup.AccountGroupName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.AccountGroup.AccountGroupName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.AccountType.AccountTypeName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.AccountType.AccountTypeName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.AccountCategory.AccountCategoryName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.AccountCategory.AccountCategoryName)
                </dd>
                
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
            </dl>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="modalclose" onclick="modalclose()">Close</button>
        <input type="button" class="btn btn-primary" value="Edit" onclick="window.location.href='Account/AddOrEditAccount?accountId=@Model.AccountId'" />
        @* @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) | *@
    </div>
</div>
@section script {
    <script src="~/js/Account.js"></script>
}
