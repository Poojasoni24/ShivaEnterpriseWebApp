@using Newtonsoft.Json
@using ShivaEnterpriseWebApp.Model
@model List<ShivaEnterpriseWebApp.Model.Account>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div id="accountDetailDiv">
            </div>
        </div>
    </div>

    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Account Detail</h4>
                    <div class="compnay_btn">
                        <input class="btn btn-success" type="button" value="Add Account" onclick="window.location.href='Account/AddorEditUser'" />
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table id="order-listing" class="table">
                                    <thead>
                                        <tr>
                                            <th>Account Code</th>
                                            <th>Account Name</th>
                                            <th>Account Description</th>
                                            <th>Account Status</th>
                                            <th>Account Group</th>
                                            <th>Account Type</th>
                                            <th>Account Category</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>@item.AccountCode</td>
                                                    <td>@item.AccountName</td>
                                                    <td>@item.AccountDescription </td>
                                                    <td>@item.AccountStatus</td>
                                                    <td>@item.AccountGroup.AccountGroupName</td>
                                                    <td>@item.AccountType.AccountTypeName</td>
                                                    <td>@item.AccountCategory.AccountCategoryName</td>

                                                    <td>
                                                        <label class="badge badge-info">@(item.AccountStatus ? "Active" : "InActive")</label>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" onclick="loadAccountcategoryPartial(@(JsonConvert.SerializeObject(item.AccountId)))">
                                                            view
                                                        </button>
                                                        <input class="btn btn-outline-danger" type="button" value="Delete" onclick="onDeleteAccount(@(JsonConvert.SerializeObject(item)))" />

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>


</body>

</html>

<script src="~/js/Account.js"></script>
