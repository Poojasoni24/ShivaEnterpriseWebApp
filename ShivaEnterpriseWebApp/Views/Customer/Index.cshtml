@using Newtonsoft.Json
@using ShivaEnterpriseWebApp.Model
@model List<ShivaEnterpriseWebApp.Model.Customer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="modal fade" id="customerModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div id="customerDetailDiv">
            </div>
        </div>
    </div>

    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Customer Detail</h4>
                    <div class="compnay_btn">
                        <input class="btn btn-success" type="button" value="Add Customer" onclick="window.location.href='Customer/AddOrEditCustomer'" />
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table id="order-listing" class="table">
                                    <thead>
                                        <tr>
                                            <th>Customer Code</th>
                                            <th>Customer Name</th>
                                            <th>Phoneno</th>
                                            <th>Account Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>@item.CustomerCode</td>
                                                    <td>@item.CustomerName</td>
                                                    <td>@item.Phoneno</td>
                                                    

                                                    <td>
                                                        <label class="badge badge-info">@(item.IsActive ? "Active" : "InActive")</label>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#customerModalLong" onclick="loadCustomerPartial(@(JsonConvert.SerializeObject(item.CustomerId)))">
                                                            view
                                                        </button>
                                                        <input class="btn btn-outline-danger" type="button" value="Delete" onclick="onDeleteCustomer(@(JsonConvert.SerializeObject(item)))" />

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>


</body>

</html>

<script src="~/js/Customer.js"></script>

