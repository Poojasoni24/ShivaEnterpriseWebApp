@using Newtonsoft.Json
@using ShivaEnterpriseWebApp.Model
@model List<ShivaEnterpriseWebApp.Model.ProductType>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div id="ProductTypeDetailDiv">
            </div>
        </div>
    </div>

    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product Type</h4>
                    <div class="compnay_btn">
                        <input class="btn btn-success" type="button" value="Add ProductType" onclick="window.location.href='ProductType/AddorEditProductType'" />
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table id="order-listing" class="table">
                                    <thead>
                                        <tr>
                                            <th>Product Type Code</th>
                                            <th>Product Type Name</th>
                                            <th>Product Type Description</th>
                                            <th>Product Type Status</th>

                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                        
                                        
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>@item.ProductTypeCode</td>
                                                    <td>@item.ProductTypeName</td>
                                                    <td>@item.ProductTypeDescription </td>
                                                    <td>@item.ProductTypeStatus</td>

                                                    <td>
                                                        <label class="badge badge-info">@(item.ProductTypeStatus ? "Active" : "InActive")</label>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" onclick="loadProductTypePartial(@(JsonConvert.SerializeObject(item.ProductTypeId)))">
                                                            view
                                                        </button>
                                                        <input class="btn btn-outline-danger" type="button" value="Delete" onclick="onDeleteProductType(@(JsonConvert.SerializeObject(item)))" />

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
</body>

</html>

<script src="~/js/ProductType.js"></script>