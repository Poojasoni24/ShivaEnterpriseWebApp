@model ShivaEnterpriseWebApp.Model.PurchaseOrderViewModel
@{
    SelectList vendorDropdownList = ViewBag.VendorSelectList;
    SelectList ProductDropdownList = ViewBag.ProductSelectList;
    SelectList BrandDropdownList = ViewBag.BrandSelectList;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase Order</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Optional custom styles */
        .form-label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Purchase Order Form</h1>
        <form controller="PurchaseOrder" action="AddOrEditPurchaseOrder" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Doc_No:</label>
                        <input type="text" class="form-control"  asp-for="PurchaseOrder.Doc_No">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Vendor:</label>
                        @Html.DropDownListFor(model => model.PurchaseOrder.VendorID, vendorDropdownList, "Select an option", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">              
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Order Date:</label>
                        <input type="date" class="form-control"  asp-for="PurchaseOrder.OrderDate">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">DeliveryDate:</label>
                        <input type="date" class="form-control"  asp-for="PurchaseOrder.DeliveryDate">
                    </div>
                </div>
                <hr style="width:100%" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Product:</label>
                            @Html.DropDownListFor(model => model.PODetail.ProductId, ProductDropdownList, "Select an option", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Brand:</label>
                            @Html.DropDownListFor(model => model.PODetail.BrandId, BrandDropdownList, "Select an option", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Quantity:</label>
                            <input type="number" class="form-control" id="qty" asp-for="PODetail.Quantity">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Discount:<sub>(in percentage)</sub></label>
                            <input type="number" class="form-control" id="discount" asp-for="PODetail.Discount">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Unit Price:</label>
                            <input type="number" class="form-control" id="unitPrice" asp-for="PODetail.UnitPrice">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Tax</label>
                            <input type="number" class="form-control" id="tax" asp-for="PODetail.Tax_Percentage">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="form-label">Net Total :</label>
                            <input type="number" class="form-control" id="netTotal" asp-for="PODetail.NetTotal">
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/PurchaseOrder.js"></script>
</body>
</html>
