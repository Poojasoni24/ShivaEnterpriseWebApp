@model ShivaEnterpriseWebApp.DTOs.CompanyDTO
@{
    ViewData["Title"] = "Details";
}
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">@Model.Company_Name</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Company_Code)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Company_Code)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Company_Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Company_Name)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Company_Startyear)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Company_Startyear.Value.Year)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Company_Endyear)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Company_Endyear)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
            </dl>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="modalclose" onclick="modalclose()">Close</button>
        <input type="button" class="btn btn-primary" value="Edit" onclick="window.location.href='Company/EditCompany?id=@Model.Company_Id'" />
            @* @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) | *@
    </div>
</div>
@section script {
    <script src="~/js/company.js"></script>
}