@using Newtonsoft.Json
@using ShivaEnterpriseWebApp.DTOs
@model List<ShivaEnterpriseWebApp.DTOs.CompanyDTO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">


<body>
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div id="CompanyDetailDiv">
            </div>
        </div>
    </div>

    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">company</h4>
                    <div class="compnay_btn">
                        <input class="btn btn-success" type="button" value="Add Company" onclick="window.location.href='Company/AddCompany'" />
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table id="order-listing" class="table">
                                    <thead>
                                        <tr>
                                            <th>Company Code</th>
                                            <th>Company Name</th>
                                            <th>Company Starting Year</th>
                                            <th>Company Ending Year</th>
                                            <th>Status</th>
                                            <th colspan="2">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>@item.Company_Code</td>
                                                    <td>@item.Company_Name</td>
                                                    <td>@item.Company_Startyear.</td>
                                                    @if (item.Company_Endyear.HasValue)
                                                    {
                                                        <td>@item.Company_Endyear</td>
                                                    }
                                                    else
                                                    {
                                                        <td>Not ended yet</td>
                                                    }
                                                    <td>
                                                        <label class="badge badge-info">@item.IsActive</label>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" onclick="loadPartial(@(JsonConvert.SerializeObject(item.Company_Id)))">
                                                            view
                                                        </button>
                                                        <input class="btn btn-outline-danger" type="button" value="Delete" onclick="onDeleteCompany(@(JsonConvert.SerializeObject(item)))" />

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>


</body>

</html>

