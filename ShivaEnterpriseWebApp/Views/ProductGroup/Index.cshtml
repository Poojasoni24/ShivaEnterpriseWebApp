@using Newtonsoft.Json
@using ShivaEnterpriseWebApp.Model
@model List<ShivaEnterpriseWebApp.Model.ProductGroup>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="modal fade" id="productgroupModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div id="productgroupDetailDiv">
            </div>
        </div>
    </div>

    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product Group</h4>
                    <div class="compnay_btn">
                        <input class="btn btn-success" type="button" value="Add ProductGroup" onclick="window.location.href='ProductGroup/AddOrEditProductGroup'" />
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table id="order-listing" class="table">
                                    <thead>
                                        <tr>
                                            <th>Product Group Code</th>
                                            <th>Product Group Name</th>
                                            <th>Product Group Description</th>
                                            <th>Product Group Status</th>

                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>@item.ProductGroupCode</td>
                                                    <td>@item.ProductGroupName</td>
                                                    <td>@item.ProductGroupDescription </td>
                                                    <td>@item.IsActive</td>

                                                    <td>
                                                        <label class="badge badge-info">@(item.IsActive ? "Active" : "InActive")</label>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#productgroupModalLong" onclick="loadProductGroupPartial(@(JsonConvert.SerializeObject(item.ProductGroupId)))">
                                                            view
                                                        </button>
                                                        <input class="btn btn-outline-danger" type="button" value="Delete" onclick="onDeleteProductGroup(@(JsonConvert.SerializeObject(item)))" />

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
</body>

</html>

<script src="~/js/ProductGroup.js"></script>