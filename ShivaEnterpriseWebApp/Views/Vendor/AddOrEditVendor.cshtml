@model ShivaEnterpriseWebApp.Model.Vendor

@{
    ViewData["Title"] = "AddorEdit";
    SelectList cityDropdownList = ViewBag.citySelectList;  
    
}
<link href="~/css/company.css" rel="stylesheet" />
@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h2>@(Model != null && Model.VendorId != Guid.Empty ? "Edit Vendor" : "Add Vendor")</h2>
    <div class="card-body company_from">
        <div class="form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="VendorCode" class="control-label"></label>
                <div class="col-md-6">
                    <input asp-for="VendorCode" class="form-control" />
                </div>
                <span asp-validation-for="VendorCode" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="VendorName" class="control-label"></label>
                <div class="col-md-6">
                    <input asp-for="VendorName" class="form-control" />
                </div>
                <span asp-validation-for="VendorName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="VendorType" class="control-label"></label>
                <div class="col-md-6">
                    <input asp-for="VendorType" class="form-control" />
                </div>
                <span asp-validation-for="VendorType" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="VendorAddress" class="control-label"></label>
                <div class="col-md-6">
                    <input asp-for="VendorAddress" class="form-control" />
                </div>
                <span asp-validation-for="VendorAddress" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Phoneno" class="control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Phoneno" class="form-control" />
                </div>
                <span asp-validation-for="Phoneno" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
           
            <div class="form-group row">
                <label asp-for="City" class="control-label"></label>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.cityId, cityDropdownList, "Select an option", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ContractStartDate" class="control-label"></label>
                <div class="col-md-9">
                    <input asp-for="ContractStartDate" class="form-control" />
                </div>
                <span asp-validation-for="ContractStartDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ContractEndDate" class="control-label"></label>
                <div class="col-md-9">
                    <input asp-for="ContractEndDate" class="form-control" />
                </div>
                <span asp-validation-for="ContractEndDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Remark" class="control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Remark" class="form-control" />
                </div>
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
            
            <div class="form-group row">
                <label asp-for="IsActive" class="control-label"></label>
                <div class="col-md-6">
                    @* @Html.CheckBoxFor(model => model.IsActive) *@
                    <input asp-for="IsActive" class="form-control" />
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            @* <input asp-for="CreatedDateTime" class="form-control" type="hidden" />*@
            <input asp-for="CreatedDateTime" class="form-control" type="hidden" />
            <input asp-for="CreatedBy" class="form-control" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @* <input type="button" value="Back to List" class="btn btn-info" asp-action="Index" asp-controller="Company"> *@
                <button type="button" class="btn btn-info"> <a asp-action="Index">Back to List</a></button>
            </div>
        </div>
    </div>

}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


